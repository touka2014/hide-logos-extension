{
    "manifest_version": 3,
    "name": "Hide Logos",
    "version": "1.0",
    "description": "Hides logos from YouTube, Google, X, Gmail, etc.",
    "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
    },
    "action": {
        "default_icon": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
        }
    },
    "content_scripts": [
      {
        "matches": ["*://*.youtube.com/*"],
        "css": ["styles/youtube.css"],
        "run_at": "document_start"
      },
      {
        "matches": ["*://*.google.com/*", "*://*.google.co.jp/*", "*://*.google.com.hk/*"],
        "css": ["styles/google.css"],
        "run_at": "document_start"
      },
      {
        "matches": ["*://*.twitter.com/*", "*://*.x.com/*"],
        "css": ["styles/x.css"],
        "run_at": "document_start"
      },
      {
        "matches": ["*://mail.google.com/*"],
        "css": ["styles/gmail.css"],
        "run_at": "document_start"
      },
      {
        "matches": ["<all_urls>"],
        "js": ["content.js"] 
      }
    ]
  }